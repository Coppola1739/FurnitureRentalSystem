<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs3230.furniturerentalsystem.controller.LoginController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="400.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
      <children>
            <ToolBar prefHeight="40.0" prefWidth="400.0" />
            <TextField fx:id="user" layoutX="184.0" layoutY="129.0" prefHeight="26.0" prefWidth="110.0" promptText="Enter a Username" />
            <PasswordField fx:id="password" layoutX="184.0" layoutY="170.0" prefHeight="26.0" prefWidth="110.0" promptText="Enter a Password" />
            <Button layoutX="226.0" layoutY="217.0" mnemonicParsing="false" onAction="#validateCredentials" prefHeight="26.0" prefWidth="65.0" text="Submit" />
            <Button fx:id="createAccountButton" layoutX="105.0" layoutY="217.0" mnemonicParsing="false" onAction="#navigateToCreateAccountPage" prefHeight="26.0" prefWidth="110.0" text="Create Account" />
            <Label layoutX="105.0" layoutY="132.0" text="Username:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="109.0" layoutY="173.0" text="Password:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
